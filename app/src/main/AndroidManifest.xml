<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.electionproject">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/applogo"
        android:label="Voting App"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.ElectionProject">
        <meta-data
            android:name='com.google.android.gms.ads.APPLICATION_ID'
            android:value='ca-app-pub-7712421072657725~3212238035'/>
        <activity
            android:name=".ElectionCreatorEnd"
            android:exported="false" />
        <activity
            android:name=".CandidatesCuztomizer"
            android:exported="false" />
        <activity
            android:name=".PositionsCuztomizer"
            android:exported="false" />
        <activity
            android:name=".ConfirmReset"
            android:exported="false" />
        <activity
            android:name=".TeacherLobby"
            android:exported="false" />
        <activity
            android:name=".results"
            android:configChanges="orientation"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Password"
            android:configChanges="orientation"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FinishedPage"
            android:configChanges="orientation"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Voting"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
    </application>

</manifest>